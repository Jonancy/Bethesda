generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  username String @unique
  password String
}

model Page1 {
  id            Int    @id @unique @default(autoincrement())
  hero          String
  whatWeDoImage String
  welcome       String
  whatWeDo      String
  whoWeAre      String
}

model Gallery {
  id    Int    @id @unique @default(autoincrement())
  image String
}

model Designation {
  id    Int    @id @unique @default(autoincrement())
  type  String @unique
  teams Team[]
}

model Post {
  id    Int    @id @unique @default(autoincrement())
  type  String @unique
  teams Team[]
}

model Team {
  id            String      @id @unique @default(cuid())
  name          String
  profile       String
  designation   Designation @relation(fields: [designationId], references: [id])
  designationId Int
  post          Post        @relation(fields: [postId], references: [id])
  postId        Int
}

